<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TransactionHub" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/bg_page</item>
        <item name="android:statusBarColor">@color/sidebar_bg</item>

        <!-- Bottom Navigation Style -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <!-- Popup Menu Style -->
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundColor">@color/sidebar_bg</item>
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="itemRippleColor">@color/accent_soft</item>
    </style>

    <!-- Popup Menu Style -->
    <style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/bg_card</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/text_muted</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>
</resources>
