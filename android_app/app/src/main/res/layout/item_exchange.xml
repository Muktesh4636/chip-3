<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/table_row_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/brand_logo_gradient" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/exchangeNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exchange Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_main" />

            <TextView
                android:id="@+id/exchangeVersionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version"
                android:textSize="12sp"
                android:textColor="@color/text_muted" />

        </LinearLayout>

        <TextView
            android:id="@+id/exchangeCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CODE"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_muted"
            android:background="@drawable/pill_bg"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border" />

</LinearLayout>
