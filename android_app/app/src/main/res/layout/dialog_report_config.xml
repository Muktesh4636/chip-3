<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Split Configuration"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_main"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/totalShareInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Profit Share: 0%"
        android:textSize="14sp"
        android:textColor="@color/primary"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Own Share %"
        android:textSize="12sp"
        android:textColor="@color/text_muted"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/editMyOwnPct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g. 50"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/field_input_bg"
        android:textSize="15sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend/Student Share %"
        android:textSize="12sp"
        android:textColor="@color/text_muted"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/editFriendPct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g. 50"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/field_input_bg"
        android:textSize="15sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnSaveConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Configuration"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white"
        android:padding="14dp" />

</LinearLayout>
