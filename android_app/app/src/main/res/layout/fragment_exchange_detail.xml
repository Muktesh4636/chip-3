<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/bg_card">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¦ Exchange Details"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/exchangeDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exchange Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_main" />

        <TextView
            android:id="@+id/exchangeDetailCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code: ---"
            android:textSize="14sp"
            android:textColor="@color/text_muted"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL CLIENTS"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted" />
                <TextView
                    android:id="@+id/exchangeTotalClients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_main" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL FUNDING"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted" />
                <TextView
                    android:id="@+id/exchangeTotalFunding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_main" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOTAL BALANCE"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted" />
                <TextView
                    android:id="@+id/exchangeTotalBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_main" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client Accounts"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_main"
        android:layout_margin="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exchangeAccountsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
