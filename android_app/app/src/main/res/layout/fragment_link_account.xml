<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link Client to Exchange"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configure client-exchange account with percentages"
            android:textSize="14sp"
            android:textColor="@color/text_muted"
            android:layout_marginBottom="24dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Client Display (Pre-selected) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client *"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/linkClientName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="15sp"
                    android:textColor="@color/text_main"
                    android:padding="12dp"
                    android:background="@drawable/field_input_bg"
                    android:layout_marginBottom="16dp" />

                <!-- Exchange Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exchange *"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/spinnerExchanges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@drawable/field_input_bg"
                    android:layout_marginBottom="8dp" />

                <!-- Exchange Version Display -->
                <TextView
                    android:id="@+id/exchangeVersionDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:padding="10dp"
                    android:background="@color/bg_page"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp" />

                <!-- My Total % (Required) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Total % *"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/editMyTotalPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g. 80"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@drawable/field_input_bg"
                    android:textSize="15sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your total percentage share (0-100, decimals allowed)"
                    android:textSize="11sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="24dp" />

                <!-- Validation Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Validation Rule:"
                    android:textSize="12sp"
                    android:textColor="@color/warning"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company % + My Own % must equal My Total %"
                    android:textSize="12sp"
                    android:textColor="@color/warning"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/percentageSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current: Company % (0) + My Own % (0) = 0 | My Total %: 0"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <!-- Company % (Report Only) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company % (Report Only)"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/editFriendPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@drawable/field_input_bg"
                    android:textSize="15sp"
                    android:text="0"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company percentage (report only, decimals allowed)"
                    android:textSize="11sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <!-- My Own % (Report Only) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Own % (Report Only)"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/editMyOwnPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@drawable/field_input_bg"
                    android:textSize="15sp"
                    android:text="0"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your own percentage (report only, decimals allowed)"
                    android:textSize="11sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="24dp" />

                <!-- Submit Button -->
                <Button
                    android:id="@+id/btnLinkAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Link Client to Exchange"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:padding="14dp"
                    app:cornerRadius="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
