<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link Exchange"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_main" />

        <TextView
            android:id="@+id/linkClientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client: John Doe"
            android:textSize="14sp"
            android:textColor="@color/text_muted"
            android:layout_marginBottom="24dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Exchange"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="6dp" />

                <Spinner
                    android:id="@+id/spinnerExchanges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@drawable/field_input_bg"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Initial Funding (â‚¹)"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/editInitialFunding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="number"
                    android:padding="12dp"
                    android:background="@drawable/field_input_bg"
                    android:textSize="15sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profit Share %"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/editProfitShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g. 80"
                    android:inputType="number"
                    android:padding="12dp"
                    android:background="@drawable/field_input_bg"
                    android:textSize="15sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loss Share %"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:id="@+id/editLossShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g. 50"
                    android:inputType="number"
                    android:padding="12dp"
                    android:background="@drawable/field_input_bg"
                    android:textSize="15sp"
                    android:layout_marginBottom="24dp" />

                <Button
                    android:id="@+id/btnLinkAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Link and Open Account"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:padding="14dp"
                    app:cornerRadius="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>
