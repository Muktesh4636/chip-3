<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transactions"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent money movement history"
            android:textSize="14sp"
            android:textColor="@color/text_muted" />

        <EditText
            android:id="@+id/searchTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search client or exchange..."
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:background="@drawable/field_input_bg"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnAdvancedFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ” Advanced Filter"
            android:textSize="12sp"
            android:backgroundTint="@color/bg_card"
            android:textColor="@color/text_main"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="24dp" />

</LinearLayout>
