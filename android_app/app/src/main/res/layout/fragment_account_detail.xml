<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Transactions"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/accDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client | Exchange"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_main" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full history of funding, trades, and payments"
                android:textSize="13sp"
                android:textColor="@color/text_muted"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/field_input_bg"
                android:padding="4dp">
                
                <Button
                    android:id="@+id/btnFunding"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+ Funding"
                    android:textSize="12sp"
                    android:textColor="@color/primary" />

                <Button
                    android:id="@+id/btnUpdateBalance"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Update Bal"
                    android:textSize="12sp"
                    android:textColor="@color/primary" />

                <Button
                    android:id="@+id/btnPayment"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Payment"
                    android:textSize="12sp"
                    android:textColor="@color/danger" />

                <Button
                    android:id="@+id/btnAccSettings"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="âš™ï¸"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted" />

                <Button
                    android:id="@+id/btnReportConfig"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“Š Report"
                    android:textSize="11sp"
                    android:textColor="@color/primary_dark" />

                <Button
                    android:id="@+id/btnAccountActions"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âš™ï¸ Actions"
                    android:textSize="11sp"
                    android:textColor="@color/text_main" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account History"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_muted"
            android:layout_margin="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/accHistoryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
