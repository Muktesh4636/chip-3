<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/communicationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Communication Hub"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_main"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team messaging, client communications, and announcements"
            android:textSize="14sp"
            android:textColor="@color/text_muted"
            android:layout_marginBottom="24dp" />

        <!-- Team Messages -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游눫 TEAM MESSAGES"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/teamMessages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading team messages..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Client Communications -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游논 CLIENT COMMUNICATIONS"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/clientCommunications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading client communications..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Announcement Center -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游닉 ANNOUNCEMENT CENTER"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/announcements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading announcements..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Communication Analytics -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游늵 COMMUNICATION ANALYTICS"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/communicationAnalytics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading communication analytics..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Communication Controls -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游눫 COMMUNICATION CONTROLS"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnSendMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="游눫 Send Team Message"
                    android:textSize="14sp"
                    android:backgroundTint="@color/success"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btnCreateAnnouncement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="游닉 Create Announcement"
                    android:textSize="14sp"
                    android:backgroundTint="@color/info"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btnClientCommunication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="游논 Client Communication"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnCommunicationTemplates"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="游늶 Templates"
                        android:textSize="12sp"
                        android:backgroundTint="@color/accent"
                        android:textColor="@color/white"
                        android:layout_marginEnd="8dp"
                        app:cornerRadius="8dp" />

                    <Button
                        android:id="@+id/btnCommunicationAnalytics"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="游늵 Analytics"
                        android:textSize="12sp"
                        android:backgroundTint="@color/warning"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp"
                        app:cornerRadius="8dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游눫 Real-time messaging and collaboration tools"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
