<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page"
    android:padding="24dp">

    <TextView
        android:id="@+id/timeTravelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Travel Reports"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_main"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View historical snapshots of your trading data"
        android:textSize="14sp"
        android:textColor="@color/text_muted"
        android:layout_marginBottom="24dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/bg_card"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT HISTORICAL DATE"
                android:textSize="10sp"
                android:textColor="@color/text_muted"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnSelectDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:backgroundTint="@color/sidebar_bg"
                android:textColor="@color/text_main"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/btnTravelBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travel Back in Time"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/timeTravelStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a date and travel back in time..."
        android:textSize="14sp"
        android:textColor="@color/text_main"
        android:layout_marginBottom="16dp" />

    <ProgressBar
        android:id="@+id/timeTravelProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <include layout="@layout/card_stat_item" android:id="@+id/historicalFundingCard" />
    <include layout="@layout/card_stat_item" android:id="@+id/historicalBalanceCard" />
    <include layout="@layout/card_stat_item" android:id="@+id/historicalPnLCard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historical Transactions"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_main"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timeTravelRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
