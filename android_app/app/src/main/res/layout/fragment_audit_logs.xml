<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page"
    android:padding="24dp">

    <TextView
        android:id="@+id/auditLogsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audit Logs"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_main"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View your account activity and security events"
        android:textSize="14sp"
        android:textColor="@color/text_muted"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/auditLogsStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading audit logs..."
        android:textSize="14sp"
        android:textColor="@color/text_main"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/auditLogsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
