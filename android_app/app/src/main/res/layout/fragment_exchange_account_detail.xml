<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/accountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Name - Exchange Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_main"
            android:layout_marginBottom="4dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp">

            <Button
                android:id="@+id/btnAddFunding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FUNDING"
                android:textSize="12sp"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:layout_marginEnd="4dp"
                app:cornerRadius="6dp" />

            <Button
                android:id="@+id/btnUpdateBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BALANCE"
                android:textSize="12sp"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:layout_marginEnd="4dp"
                app:cornerRadius="6dp" />

            <Button
                android:id="@+id/btnEditPercentage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EDIT %"
                android:textSize="12sp"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                app:cornerRadius="6dp" />

        </LinearLayout>

        <!-- Account Summary Cards -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Summary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_main"
                    android:layout_marginBottom="16dp" />

                <!-- Summary Grid (matching website's 6 cards) -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:layout_marginBottom="20dp">

                    <!-- Funding -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Funding"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/fundingValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="₹0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="12dp" />

                    <!-- Exchange Balance -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Exchange Balance"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/balanceValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="₹0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/success"
                        android:layout_marginBottom="12dp" />

                    <!-- Client PnL -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Client PnL"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/pnlValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="₹0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent"
                        android:layout_marginBottom="12dp" />

                    <!-- Final Share -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Final Share"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/finalShareValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="₹0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/warning"
                        android:layout_marginBottom="12dp" />

                    <!-- Remaining Settlement -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Remaining Settlement"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/remainingSettlementValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="₹0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent"
                        android:layout_marginBottom="12dp" />

                    <!-- Share Percentage -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Share Percentage"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/sharePercentageValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="0%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/info"
                        android:layout_marginBottom="12dp" />

                </GridLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Share Breakdown Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/shareBreakdownCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share Breakdown"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_main"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Own Share"
                            android:textSize="11sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/myOwnShareValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0 (0%)"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Friend Share"
                            android:textSize="11sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/friendShareValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹0 (0%)"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/success" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Recent Transactions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/primary"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recent Transactions"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnViewAllTransactions"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="View All"
                        android:textSize="11sp"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/primary"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="0dp"
                        app:cornerRadius="4dp" />

                </LinearLayout>

                <!-- Transactions RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/transactionsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:nestedScrollingEnabled="false"
                    android:visibility="visible" />

                <!-- Empty State -->
                <TextView
                    android:id="@+id/emptyTransactionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:text="No Transactions"
                    android:textAlignment="center"
                    android:textColor="@color/text_muted"
                    android:textSize="13sp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>