<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/accountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client Name - Exchange Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_main"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account details and transactions"
            android:textSize="14sp"
            android:textColor="@color/text_muted"
            android:layout_marginBottom="24dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnAddFunding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Funding"
                android:textSize="14sp"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/btnUpdateBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update Balance"
                android:textSize="14sp"
                android:backgroundTint="@color/success"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/btnEditPercentage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Percentage"
                android:textSize="14sp"
                android:backgroundTint="@color/warning"
                android:textColor="@color/white"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <!-- Account Summary Cards -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Summary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_main"
                    android:layout_marginBottom="16dp" />

                <!-- Summary Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:layout_marginBottom="20dp">

                    <!-- Funding -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Initial Funding"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/fundingValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="₹0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="12dp" />

                    <!-- Current Balance -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Current Balance"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/balanceValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="₹0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/success"
                        android:layout_marginBottom="12dp" />

                    <!-- Client PnL -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Client P&amp;L"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/pnlValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="₹0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent"
                        android:layout_marginBottom="12dp" />

                    <!-- My Share -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="My Share"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/myShareValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="₹0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/warning"
                        android:layout_marginBottom="12dp" />

                </GridLayout>

                <!-- Share Breakdown -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/bg_page"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Personal Share"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/mySharePercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Company Share"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted" />

                        <TextView
                            android:id="@+id/friendSharePercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/success" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Recent Transactions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:background="@color/primary"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recent Transactions"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View All"
                        android:textSize="12sp"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/primary"
                        app:cornerRadius="6dp" />

                </LinearLayout>

                <!-- Transactions RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/transactionsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:nestedScrollingEnabled="false"
                    android:visibility="visible" />

                <!-- Empty State -->
                <TextView
                    android:id="@+id/emptyTransactionsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="40dp"
                    android:text="No Transactions\nStart by adding funding or updating the exchange balance."
                    android:textAlignment="center"
                    android:textColor="@color/text_muted"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBackToClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Client"
            android:textSize="16sp"
            android:backgroundTint="@color/text_muted"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"
            app:cornerRadius="8dp" />

    </LinearLayout>

</ScrollView>