<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/table_row_selector"
    android:paddingHorizontal="24dp"
    android:paddingVertical="16dp">

    <TextView
        android:id="@+id/clientReportName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_main" />

    <TextView
        android:id="@+id/clientReportCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Code: JD001"
        android:textSize="12sp"
        android:textColor="@color/text_muted"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL ACCOUNTS"
                android:textSize="10sp"
                android:textColor="@color/text_muted" />
            <TextView
                android:id="@+id/clientTotalAccounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="14sp"
                android:textColor="@color/text_main" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL PNL"
                android:textSize="10sp"
                android:textColor="@color/text_muted" />
            <TextView
                android:id="@+id/clientTotalPnL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹25,000"
                android:textSize="14sp"
                android:textColor="@color/success" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY SHARE"
                android:textSize="10sp"
                android:textColor="@color/text_muted" />
            <TextView
                android:id="@+id/clientTotalShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹2,500"
                android:textSize="14sp"
                android:textColor="@color/primary" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border"
        android:layout_marginTop="12dp" />

</LinearLayout>
