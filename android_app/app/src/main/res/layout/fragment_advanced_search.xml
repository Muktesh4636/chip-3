<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page"
    android:padding="24dp">

    <TextView
        android:id="@+id/advancedSearchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advanced Search &amp; Filter"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_main"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search and filter transactions by multiple criteria"
        android:textSize="14sp"
        android:textColor="@color/text_muted"
        android:layout_marginBottom="24dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/bg_card"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FILTER CRITERIA"
                android:textSize="10sp"
                android:textColor="@color/text_muted"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client"
                android:textSize="12sp"
                android:textColor="@color/text_muted"
                android:layout_marginBottom="6dp" />
            <Spinner
                android:id="@+id/spinnerFilterClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/field_input_bg"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exchange"
                android:textSize="12sp"
                android:textColor="@color/text_muted"
                android:layout_marginBottom="6dp" />
            <Spinner
                android:id="@+id/spinnerFilterExchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/field_input_bg"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Type"
                android:textSize="12sp"
                android:textColor="@color/text_muted"
                android:layout_marginBottom="6dp" />
            <Spinner
                android:id="@+id/spinnerFilterType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@drawable/field_input_bg"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Text (Client/Exchange/Type/Notes)"
                android:textSize="12sp"
                android:textColor="@color/text_muted"
                android:layout_marginBottom="6dp" />
            <EditText
                android:id="@+id/editSearchText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter search terms..."
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/field_input_bg"
                android:textSize="15sp"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPerformSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Search"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btnClearFilters"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clear"
                    android:backgroundTint="@color/sidebar_bg"
                    android:textColor="@color/text_main"
                    android:layout_marginStart="8dp"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/searchResultsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply filters to search transactions"
        android:textSize="14sp"
        android:textColor="@color/text_main"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchResultsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
