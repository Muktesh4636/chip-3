<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shareTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Share &amp; Equity Summary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_main"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage company ownership, equity distributions, and partner profit sharing"
            android:textSize="14sp"
            android:textColor="@color/text_muted"
            android:layout_marginBottom="24dp" />

        <!-- Equity Breakdown -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š EQUITY BREAKDOWN"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/equityBreakdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading breakdown..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Dividend History -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° DIVIDEND HISTORY"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/dividendHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading dividends..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Profit Split -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¤ PARTNER PROFIT SPLIT"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/partnerProfitSplit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading profit split..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Cap Table -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ CAP TABLE SUMMARY"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/capTableSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading cap table..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Equity Controls -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ EQUITY &amp; SHARE CONTROLS"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnManageEquity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Manage Equity"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btnDistributeProfit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° Distribute Profits"
                    android:textSize="14sp"
                    android:backgroundTint="@color/success"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnShareReports"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“Š Reports"
                        android:textSize="12sp"
                        android:backgroundTint="@color/accent"
                        android:textColor="@color/white"
                        android:layout_marginEnd="8dp"
                        app:cornerRadius="8dp" />

                    <Button
                        android:id="@+id/btnShareSettings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âš™ï¸ Settings"
                        android:textSize="12sp"
                        android:backgroundTint="@color/warning"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
