<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_main"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLIENT INFORMATION"
        android:textSize="10sp"
        android:textColor="@color/text_muted"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/accountInfoClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client Name"
        android:textSize="16sp"
        android:textColor="@color/text_main"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/accountInfoExchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exchange Name"
        android:textSize="14sp"
        android:textColor="@color/text_muted"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCOUNT BALANCES"
        android:textSize="10sp"
        android:textColor="@color/text_muted"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FUNDING"
                android:textSize="10sp"
                android:textColor="@color/text_muted" />
            <TextView
                android:id="@+id/accountInfoFunding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹0"
                android:textSize="16sp"
                android:textColor="@color/text_main" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXCHANGE BALANCE"
                android:textSize="10sp"
                android:textColor="@color/text_muted" />
            <TextView
                android:id="@+id/accountInfoBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹0"
                android:textSize="16sp"
                android:textColor="@color/text_main" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERFORMANCE"
        android:textSize="10sp"
        android:textColor="@color/text_muted"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLIENT PNL"
                android:textSize="10sp"
                android:textColor="@color/text_muted" />
            <TextView
                android:id="@+id/accountInfoPnL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹0"
                android:textSize="16sp"
                android:textColor="@color/success" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY SHARE"
                android:textSize="10sp"
                android:textColor="@color/text_muted" />
            <TextView
                android:id="@+id/accountInfoShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹0"
                android:textSize="16sp"
                android:textColor="@color/primary" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE CONFIGURATION"
        android:textSize="10sp"
        android:textColor="@color/text_muted"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROFIT SHARE"
                android:textSize="10sp"
                android:textColor="@color/text_muted" />
            <TextView
                android:id="@+id/accountInfoProfitShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="16sp"
                android:textColor="@color/success" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOSS SHARE"
                android:textSize="10sp"
                android:textColor="@color/text_muted" />
            <TextView
                android:id="@+id/accountInfoLossShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="16sp"
                android:textColor="@color/danger" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnCloseAccountInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:backgroundTint="@color/sidebar_bg"
        android:textColor="@color/text_main" />

</LinearLayout>
