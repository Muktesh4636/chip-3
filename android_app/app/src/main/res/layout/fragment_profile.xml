<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Profile &amp; Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_main"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage your account settings and security"
            android:textSize="14sp"
            android:textColor="@color/text_muted"
            android:layout_marginBottom="24dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACCOUNT INFORMATION"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/profileUserId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User ID: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/text_main"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/profileUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/text_main"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/profileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/text_main"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/profileJoinDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member since: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/profileLastLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last login: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/text_muted" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACCOUNT ACTIONS"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:backgroundTint="@color/sidebar_bg"
                    android:textColor="@color/text_main"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btnLogoutAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout from All Devices"
                    android:backgroundTint="@color/danger"
                    android:textColor="@color/white"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
