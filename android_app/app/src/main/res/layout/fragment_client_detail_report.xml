<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_page"
    android:padding="24dp">

    <TextView
        android:id="@+id/clientDetailReportName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client Performance Report"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_main"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detailed performance analysis"
        android:textSize="14sp"
        android:textColor="@color/text_muted"
        android:layout_marginBottom="32dp" />

    <include layout="@layout/card_stat_item" android:id="@+id/clientReportTotalAccountsCard" />
    <include layout="@layout/card_stat_item" android:id="@+id/clientReportTotalFundingCard" />
    <include layout="@layout/card_stat_item" android:id="@+id/clientReportTotalPnLCard" />
    <include layout="@layout/card_stat_item" android:id="@+id/clientReportTotalShareCard" />

</LinearLayout>
