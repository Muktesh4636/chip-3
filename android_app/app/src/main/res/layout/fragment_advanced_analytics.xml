<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/analyticsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced Analytics &amp; Business Intelligence"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_main"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI-powered insights and predictive analytics"
            android:textSize="14sp"
            android:textColor="@color/text_muted"
            android:layout_marginBottom="24dp" />

        <!-- Predictive Analytics -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¤– PREDICTIVE ANALYTICS"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/predictiveAnalytics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading predictive insights..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Business Intelligence -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š BUSINESS INTELLIGENCE"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/businessIntelligence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading business intelligence..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Trend Analysis -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ˆ TREND ANALYSIS"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/trendAnalysis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading trend analysis..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Analytics Controls -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ANALYTICS CONTROLS"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnGeneratePredictiveReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”® Generate Predictive Report"
                    android:textSize="14sp"
                    android:backgroundTint="@color/success"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btnBusinessIntelligence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Business Intelligence Dashboard"
                    android:textSize="14sp"
                    android:backgroundTint="@color/info"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btnTrendAnalysis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ˆ Advanced Trend Analysis"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnCustomAnalytics"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸŽ¯ Custom Analytics"
                        android:textSize="12sp"
                        android:backgroundTint="@color/accent"
                        android:textColor="@color/white"
                        android:layout_marginEnd="8dp"
                        app:cornerRadius="8dp" />

                    <Button
                        android:id="@+id/btnExportAnalytics"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ’¾ Export Analytics"
                        android:textSize="12sp"
                        android:backgroundTint="@color/warning"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp"
                        app:cornerRadius="8dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Analytics powered by AI and machine learning"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
