<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Date -->
            <TextView
                android:id="@+id/transactionDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jan 15, 2025"
                android:textSize="13sp"
                android:textColor="@color/text_main"
                android:textStyle="bold" />

            <!-- Type Badge -->
            <TextView
                android:id="@+id/transactionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trade"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:background="@color/primary"
                app:cornerRadius="16dp" />

        </LinearLayout>

        <!-- Middle Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Amount -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textSize="11sp"
                    android:textColor="@color/text_muted" />

                <TextView
                    android:id="@+id/transactionAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹1,000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary" />

            </LinearLayout>

            <!-- Balance After -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance After"
                    android:textSize="11sp"
                    android:textColor="@color/text_muted" />

                <TextView
                    android:id="@+id/transactionBalanceAfter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹10,000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/success" />

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Notes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textSize="11sp"
                    android:textColor="@color/text_muted" />

                <TextView
                    android:id="@+id/transactionNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trade executed successfully"
                    android:textSize="13sp"
                    android:textColor="@color/text_main"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Actions -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteTransaction"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="12sp"
                android:textColor="@color/danger"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="@color/danger"
                android:layout_marginStart="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>