<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/taxTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax &amp; Compliance Center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_main"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage tax liabilities, regulatory filings, and document verification"
            android:textSize="14sp"
            android:textColor="@color/text_muted"
            android:layout_marginBottom="24dp" />

        <!-- Tax Summary -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’° TAX LIABILITY"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/taxSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading tax summary..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Compliance Status -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš–ï¸ REGULATORY COMPLIANCE"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/complianceStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading status..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Document Verification -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ DOCUMENT VERIFICATION"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/documentVerification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading verification..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Audit Trail -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” AUDIT TRAIL"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/auditTrail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading audit trail..."
                    android:textSize="12sp"
                    android:textColor="@color/text_main"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tax Controls -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ TAX &amp; COMPLIANCE CONTROLS"
                    android:textSize="10sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnGenerateTaxReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Generate Tax Report"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btnSubmitCompliance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš–ï¸ Submit Regulatory Filing"
                    android:textSize="14sp"
                    android:backgroundTint="@color/success"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"
                    app:cornerRadius="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnTaxCalendar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“… Deadlines"
                        android:textSize="12sp"
                        android:backgroundTint="@color/accent"
                        android:textColor="@color/white"
                        android:layout_marginEnd="8dp"
                        app:cornerRadius="8dp" />

                    <Button
                        android:id="@+id/btnTaxSettings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âš™ï¸ Settings"
                        android:textSize="12sp"
                        android:backgroundTint="@color/warning"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
